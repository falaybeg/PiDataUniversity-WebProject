@model IEnumerable<PiDataWebApp.Models.StudentViewModel>

<div class="row">
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <center>
                <h2 class="page-head-title"><b><b>Öğrenci Yönetim Ekranı</b></b></h2>
            </center>
            <br /><br />
            <div class="col-sm-4">
                <div><a href="@Url.Action("AddStudent","Student", new { Area = "Admin"})"><button class="btn btn-success">Yeni Öğrenci</button></a></div>
                <br />
            </div>

            <div class="panel-body">
                <table class="table table-striped table-hover" id="productTablee">
                    <thead>
                        <tr style="font-size: 16px;  background-color:lavender">
                            <th width="10%">TC No</th>
                            <th width="10%">Öğrenci No</th>
                            <th width="11%">İsim</th>
                            <th width="11%">Soyisim</th>
                            <th width="8%">Cinsiyet</th>
                            <th width="11%">Telefon</th>
                            <th width="10%">Email</th>
                            <th width="11%">Doğum Yılı</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdentityNumber</td>
                                <td>@item.StudentNumber</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Gender</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.BirthDay</td>
                                <td class="text-right">
                                    <div class="btn-group btn-hspace">
                                        <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle " aria-expanded="false">Action <span class="icon-dropdown mdi mdi-chevron-down"></span></button>
                                        <ul role="menu" class="dropdown-menu pull-right">
                                            <li><a href="@Url.Action("EditStudent","UserManagement", new { Area="Admin", id = item.Id})"><i class="icon mdi mdi-edit"></i><span>Edit</span></a></li>
                                            <li><a href="#" onclick="Delete('@item.Id')"><i class="icon mdi mdi-delete"></i><span>Delete</span></a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
