@model IEnumerable<PiDataWebApp.Models.UniversityInfoViewModel>


<div class="row">
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <center>
                <h2 class="page-head-title"><b><b>Üniversite Tanıtım Yönetim Ekranı</b></b></h2>
            </center>
            <br /><br />
            <div class="col-sm-4">
                <div><a href="@Url.Action("AddUniversityInfo","UniversityInfo", new { Area = "Admin"})"><button class="btn btn-success">Yeni Üniversite Tanıtım</button></a></div>
                <br />
            </div>

            <div class="panel-body">
                <table class="table table-striped table-hover" id="productTablee">
                    <thead>
                        <tr style="font-size: 16px;  background-color:lavender">
                            <th width="18%">Üniversite Adı</th>
                            <th width="23%">Adres</th>
                            <th width="15%">Telefon</th>
                            <th width="15%">Fax No</th>
                            <th width="15%">Email</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                             @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Phone</td>
                                    <td>@item.FaxNo</td>
                                    <td>@item.Email</td>
                                    <td class="text-right">
                                        <div class="btn-group btn-hspace">
                                            <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle " aria-expanded="false">İşlem<span class="icon-dropdown mdi mdi-chevron-down"></span></button>
                                            <ul role="menu" class="dropdown-menu pull-right">
                                                <li><a href="@Url.Action("EditUniversityInfo","UniversityInfo", new { Area = "Admin", id = item.Id})"><i class="icon mdi mdi-edit"></i><span>Guncelle</span></a></li>
                                                <li><a href="#" onclick="Delete(@item.Id)"><i class="icon mdi mdi-delete"></i><span>Sil</span></a></li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

