@model IEnumerable<PiDataWebApp.Models.UniversityNewsViewModel>

<div class="row">
    <div class="panel panel-default panel-table">
        <div class="panel-heading">
            <center>
                <h2 class="page-head-title"><b><b>Haber Yönetim Ekranı</b></b></h2>
            </center>
            <br /><br />
            <div class="col-sm-4">
                <div><a href="@Url.Action("AddNews","UniversityNews", new { Area = "Admin"})"><button class="btn btn-success">Yeni Haber</button></a></div>
                <br />
            </div>

            <div class="panel-body">
                <table class="table table-striped table-hover" id="productTablee">
                    <thead>
                        <tr style="font-size: 16px;  background-color:lavender">
                            <th width="25%">Başlık</th>
                            <th width="38%">İçerik</th>
                            <th width="20%">Yayınlanma Tarihi</th>
                            <th width="15%">Yayınlayan</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>

                             @foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.Tittle</td>
                            <td>@item.Context</td>
                            <td>@item.CreatedTime</td>
                            <td>@item.UniversityInfo.Name</td>
                            <td class="text-right">
                                <div class="btn-group btn-hspace">
                                    <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle " aria-expanded="false">Action <span class="icon-dropdown mdi mdi-chevron-down"></span></button>
                                    <ul role="menu" class="dropdown-menu pull-right">
                                        <li><a href="@Url.Action("EditProduct","Product", new { id = item.Id})"><i class="icon mdi mdi-edit"></i><span>Edit</span></a></li>
                                        <li><a href="#" onclick="Delete(@item.Id)"><i class="icon mdi mdi-delete"></i><span>Delete</span></a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    <script>
        var token = sessionStorage.getItem("accessToken");
        var headers = {};
        headers.Authorization = "Bearer " + token;

        $(document).ready(function () {
            if (token == null) {
                window.location.href = "/Admin/UserManagement/Login";
            }
        });

        var Delete = function (id) {

            $.ajax({
                url: "/api/UniversityNews/" + id,
                method: "DELETE",
                headers: headers,
                success: function () {
                    alert("Deleted successfully !");
                    window.location.replace("/Product/ListProduct");

                },
                error: function (jqXHR) {
                    alert("Error !");
                }
            });
        };

    </script>
